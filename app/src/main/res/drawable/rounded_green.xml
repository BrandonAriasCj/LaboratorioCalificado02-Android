<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Verde claro cuando está presionado -->
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="#1B3C24"/> <!-- Borde verde oscuro -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1B3C24"/> <!-- Verde oscuro cuando no está presionado -->
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="#4CAF50"/> <!-- Borde verde claro -->
        </shape>
    </item>
</selector>
